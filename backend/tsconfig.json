{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "shared/*": ["../shared/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "prisma",
    "src/libs/core/base-repository.ts"
  ]
}
